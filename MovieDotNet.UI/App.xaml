<Application x:Class="MovieDotNet.UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MovieDotNet.UI"
             xmlns:data="clr-namespace:MovieDotNet.Data;assembly=MovieDotNet.Data"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        
        <local:VMLocator x:Key="Locator" />

        <DataTemplate DataType="{x:Type local:LoginViewModel}">
            <local:LoginView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type local:MovieListViewModel}">
            <local:MovieListView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type local:MovieDetailsViewModel}">
            <local:MovieDetailsView/>
        </DataTemplate>
    </Application.Resources>
</Application>
